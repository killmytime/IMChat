<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <LinearLayout
        android:id="@+id/check_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorMain"
        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp">
        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/for_register_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_labelColor="#666"
            app:mtf_image="@drawable/ic_account_box_black_24dp">
            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="请输入用户名"
                android:textSize="18sp"
                android:inputType="text"/>
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/for_register_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/for_register_username"
            android:layout_marginRight="100dp"
            app:mtf_labelColor="#666"
            app:mtf_image="@drawable/ic_password_black_24dp">
            <EditText
                android:id="@+id/register_password"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="请输入密码"
                android:textSize="18sp"
                android:inputType="textPassword"/>
        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/for_confirm_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/for_register_password"
            android:layout_marginRight="100dp"
            app:mtf_labelColor="#666"
            app:mtf_image="@drawable/ic_password_black_24dp">
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="请再次输入密码"
                android:textSize="18sp"
                android:inputType="textPassword"/>
        </com.github.florent37.materialtextfield.MaterialTextField>
        <Button
            android:id="@+id/registerBt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="注 册"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/for_confirm_password"
            android:layout_centerHorizontal="true"
            android:background="@color/colorMain"/>
        <Button
            android:id="@+id/loginBt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="登 录"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/registerBt"
            android:layout_centerHorizontal="true"
            android:background="@color/colorMain"/>
    </RelativeLayout>

</RelativeLayout>